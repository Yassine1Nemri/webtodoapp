{
  "name": "todo-devsecops-project",
  "version": "1.0.0",
  "description": "A Todo app demonstrating DevSecOps practices",
  "main": "src/index.html",
  "scripts": {
    "start": "node src/server/server.js",
    "test": "npm run test:unit && npm run test:security",
    "test:unit": "jest tests/unit/",
    "test:security": "npm run security:audit && npm run security:scan",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npx retire --path src/",
    "security:dependencies": "npx @cyclonedx/cyclonedx-npm --output-format JSON --output-file sbom.json",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -f docker/Dockerfile -t todo-app .",
    "docker:run": "docker run -p 3000:3000 todo-app",
    "deploy": "echo 'Deploying to production...'",
    "monitor": "node monitoring/health-check.js"
  },
  "keywords": [
    "todo",
    "devsecops",
    "security",
    "webapp"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "retire": "^4.0.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "helmet": "^7.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "security": {
    "advisories": {
      "ignore": []
    }
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yassine1Nemri/webtodoapp.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Yassine1Nemri/webtodoapp/issues"
  },
  "homepage": "https://github.com/Yassine1Nemri/webtodoapp#readme"
}
